                                    <menus:MenuItem Text="Device Manager" Image="Resources/Root.png"/>
                                </ui:Button.ButtonContent>
                            </ui:Button>

                            <!--Options-->
                            <ui:Button Clicked="Options_Clicked">
                                <ui:Button.ButtonContent>
                                    <menus:MenuItem Text="Options" Image="Resources/Options_01.png"/>
                                </ui:Button.ButtonContent>
                            </ui:Button>

